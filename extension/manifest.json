{
  "manifest_version": 3,
  "name": "Co-Pilot - Analyse Leboncoin",
  "version": "1.2.0",
  "description": "Analyse les annonces auto Leboncoin et donne un score de confiance de 0 a 100.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.leboncoin.fr/*",
    "http://localhost:5001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["carvertical_logo.png"],
      "matches": ["https://*.leboncoin.fr/*"]
    }
  ]
}
